{
  "definitions": {
    "MainBannerCarousel": {
      "title": "Main Banner Carousel",
      "description": "Full width banners with title, subtitle, an image, and a colored background",
      "type": "object",
      "properties": {
        "banners": {
          "title": "Banners",
          "type": "array",
          "items": {
            "title": "Banner",
            "type": "object",
            "properties": {
              "desktopImage": {
                "title": "Desktop image",
                "$ref": "app:vtex.native-types#/definitions/url",
                "default": "",
                "widget": {
                  "ui:widget": "image-uploader"
                }
              },
              "mobileImage": {
                "title": "Mobile image",
                "$ref": "app:vtex.native-types#/definitions/url",
                "default": "",
                "widget": {
                  "ui:widget": "image-uploader"
                }
              },
              "imageAlt": {
                "title": "Alt description",
                "type": "string"
              },
              "color": {
                "title": "Color",
                "type": "string",
                "enum": ["blue", "yellow", "red"],
                "enumNames": ["Blue", "Yellow", "Red"],
                "default": "blue"
              },
              "url": { "title": "URL address for link", "type": "string" }
            }
          }
        }
      }
    },
    "Newsletter": {
      "title": "Newsletter",
      "description": "Newsletter subscription form.",
      "type": "object"
    },
    "ProductShelf": {
      "title": "Shelf",
      "description": "Product shelf",
      "properties": {
        "title": { "type": "string", "title": "Shelf title" },
        "collection": { "type": "string", "title": "Collection ID" }
      }
    },
    "ShopByCategory": {
      "title": "Shop by Category",
      "description": "Cards that show a transparent image and link to a category",
      "type": "object",
      "properties": {
        "categories": {
          "title": "Categories",
          "type": "array",
          "items": {
            "title": "Category",
            "type": "object",
            "properties": {
              "categoryImage": {
                "title": "Featured product image",
                "description": "Please use a PNG image with a transparent background",
                "type": "string",
                "widget": {
                  "ui:widget": "image-uploader"
                }
              },
              "categoryId": {
                "title": "Category ID",
                "type": "string"
              }
            }
          }
        }
      }
    },
    "Banner": {
      "title": "Banner",
      "description": "Banner with a background image, a title and a link",
      "type": "object",
      "properties": {
        "image": {
          "title": "Desktop image",
          "type": "string",
          "widget": {
            "ui:widget": "image-uploader"
          }
        },
        "mobileImage": {
          "title": "Mobile image",
          "type": "string",
          "widget": {
            "ui:widget": "image-uploader"
          }
        },
        "alt": {
          "title": "Alt description",
          "description": "Required for acessibility and SEO",
          "type": "string"
        },
        "url": {
          "title": "URL address for link",
          "type": "string"
        }
      }
    },
    "ProductGrid": {
      "title": "Product Grid",
      "description": "Products from a collection or the best selling ones",
      "type": "object",
      "properties": {
        "title": {
          "title": "Title",
          "type": "string"
        },
        "maxNumberItems": {
          "title": "Maximum number of items",
          "type": "number",
          "default": "6"
        },
        "products": {
          "title": "Products",
          "properties": {
            "filterOption": {
              "title": "Display",
              "type": "string",
              "enum": ["OrderByTopSaleDESC", "collection"],
              "enumNames": [
                "Show the best selling products",
                "Display products from an existing collection"
              ],
              "default": "OrderByTopSaleDESC"
            }
          },
          "required": ["filterOption"],
          "dependencies": {
            "filterOption": {
              "oneOf": [
                {
                  "title": "Products",
                  "properties": {
                    "filterOption": {
                      "enum": ["collection"]
                    },
                    "collection": {
                      "title": "Collection ID",
                      "type": "string"
                    }
                  },
                  "required": ["collection"]
                }
              ]
            }
          }
        }
      },
      "required": ["products"]
    }
  }
}
